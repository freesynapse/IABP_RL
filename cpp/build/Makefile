# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  generator_config = debug
  reader_config = debug

else ifeq ($(config),release)
  generator_config = release
  reader_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := generator reader

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

generator:
ifneq (,$(generator_config))
	@echo "==== Building generator ($(generator_config)) ===="
	@${MAKE} --no-print-directory -C . -f generator.make config=$(generator_config)
endif

reader:
ifneq (,$(reader_config))
	@echo "==== Building reader ($(reader_config)) ===="
	@${MAKE} --no-print-directory -C . -f reader.make config=$(reader_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f generator.make clean
	@${MAKE} --no-print-directory -C . -f reader.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   generator"
	@echo "   reader"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"